<!doctype html>
<html lang="en">
<head>
  <%- include ./partials/head %>
</head>
<body>

  <%- include ./partials/header %>

  <h3>All chefs</h3>

  <div class="row">
  <% for(let chef of chefs) { %>
    <div class="col-md-4">

      <div class="card mt-3">
        <div class="card-body">
          <h4 class="card-title"><img class="rounded-circle" style="max-height:50px" src="<%= chef.avatar %>" /> <%=chef.name%></h4>
          <h6 class="card-subtitle mb-2 text-muted">Spaghetti code masterchef</h6>
          <p class="card-text">
          Latest recipes:
          </p>
          <ul>
          <% for(var i=0;i<chef.recipes.length;i++){ %>
            <li><a href="/recipes/<%=chef.recipes[i].shortId%>"><%=chef.recipes[i].name%></a></li>
          <% if(i === 2) {break;}
          } %>
        </ul>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><a href="/chefs/<%=chef.shortId%>" class="card-link">See profile</a></li>
        </ul>
      </div>
    </div>
  <% } %>


  </div>
</div>

</body>
</html>
