<!doctype html>
<html lang="en">
<head>
  <%- include ./partials/head %>
</head>
<body>

 <%- include ./partials/header %>

 <div class="row">
  <!-- EJS syntax to create a loop -->
  <% recipes.forEach(function(recipe, index) { %>
    <div class="col-sm-4">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title"><%= recipe.title %></h3>
        </div>
        <div class="card-body text-center">
          <h1><%= recipe.score %> <small>/ 10</small></h1>
        </div>
        <div class="card-footer small">
          <p>By <%= recipe.chef %></p>
        </div>
      </div>
    </div>
  <!-- also have to close our loop -->
  <% }) %>
  </div>

  </div>
</div>

</body>
</html>
