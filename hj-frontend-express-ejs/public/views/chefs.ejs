<!doctype html>
<html lang="en">
<head>
  <%- include ./partials/head %>
</head>
<body>

  <%- include ./partials/header %>
  
  <div class="row">
  <!-- EJS syntax to create a loop -->
  <% chefs.forEach(function(chef, index) { %>
    <div class="col-sm-4">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">
            <img class="rounded-circle" src="<%= chef.avatar %>" />
            <a href="/chefs/<%=chef._id%>"><%=chef.name%></a>
          </h3>
        </div>
        <div class="card-body text-center">
          <p>Latest recipes</p>
          <ul>
          <% chef.recipes.forEach(function(recipe, index) { %>
            <li><%=recipe.name%></li>
          <% }) %>
        </ul>
        </div>
        <div class="card-footer small">
        </div>
      </div>
    </div>
  <!-- also have to close our loop -->
  <% }) %>
  </div>

  </div>
</div>

</body>
</html>
